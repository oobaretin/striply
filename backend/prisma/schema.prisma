// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model BusinessOwner {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  firstName String
  lastName  String
  phone     String?
  address   String?
  city      String?
  state     String?
  zipCode   String?
  country   String   @default("USA")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("business_owners")
}

model Customer {
  id             String   @id @default(cuid())
  firstName      String
  lastName       String
  email          String?
  phone          String
  address        String?
  city           String?
  state          String?
  zipCode        String?
  country        String   @default("USA")
  purchaseMethod String? // "online" or "in-person"
  notes          String?
  isActive       Boolean  @default(true)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  purchases Purchase[]

  @@map("customers")
}

model Buyer {
  id                       String   @id @default(cuid())
  firstName                String
  lastName                 String
  email                    String?
  paymentEmail             String?
  phone                    String
  address                  String?
  city                     String?
  state                    String?
  zipCode                  String?
  country                  String   @default("USA")
  priceSheetUrl            String?
  bestFormOfContact        String?
  facebookLink             String?
  removeLabels             Boolean  @default(false)
  reachOutPriorToInvoicing Boolean  @default(false)
  paymentMethods           String?
  isPreferred              Boolean  @default(false)
  notes                    String?
  isActive                 Boolean  @default(true)
  createdAt                DateTime @default(now())
  updatedAt                DateTime @updatedAt

  sales         Sale[]
  productPrices BuyerProductPrice[]

  @@map("buyers")
}

model Category {
  id          String   @id @default(cuid())
  name        String
  description String?
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  subCategories SubCategory[]

  @@map("categories")
}

model SubCategory {
  id          String   @id @default(cuid())
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  name        String
  description String?
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  products Product[]

  @@map("sub_categories")
}

model Product {
  id            String       @id @default(cuid())
  subCategoryId String?
  subCategory   SubCategory? @relation(fields: [subCategoryId], references: [id], onDelete: SetNull)
  name          String
  brand         String?
  model         String?
  description   String?
  ndcCode       String? // National Drug Code
  imageUrl      String? // Link to product image
  colorCode     String? // Color for visual differentiation
  specialNotes  String? // Special notes like "NOT BUYING", "MUST BE MINT", "ON NO BUY LIST"
  isActive      Boolean      @default(true)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  purchaseItems PurchaseItem[]
  saleItems     SaleItem[]
  buyerPrices   BuyerProductPrice[]

  @@map("products")
}

model BuyerProductPrice {
  id                    String   @id @default(cuid())
  buyerId               String
  buyer                 Buyer    @relation(fields: [buyerId], references: [id], onDelete: Cascade)
  productId             String
  product               Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  // Expiration-based pricing
  expirationRange1Label String? // e.g., "Mint 12/26+"
  expirationRange1Price Float? // Price for range 1
  expirationRange2Label String? // e.g., "Mint 9/26-11/26+"
  expirationRange2Price Float? // Price for range 2
  dingReductionPrice    Float? // Ding reduction price (discount amount)
  // Legacy single price field (for backward compatibility)
  price                 Float? // Single price (if not using expiration ranges)
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  @@unique([buyerId, productId])
  @@map("buyer_product_prices")
}

model Purchase {
  id             String   @id @default(cuid())
  customerId     String
  customer       Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
  purchaseDate   DateTime @default(now())
  purchaseMethod String   @default("in-person") // "online" or "in-person"
  totalAmount    Float
  notes          String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  items PurchaseItem[]

  @@map("purchases")
}

model PurchaseItem {
  id             String    @id @default(cuid())
  purchaseId     String
  purchase       Purchase  @relation(fields: [purchaseId], references: [id], onDelete: Cascade)
  productId      String
  product        Product   @relation(fields: [productId], references: [id])
  quantity       Int
  unitPrice      Float
  totalPrice     Float
  expirationDate DateTime?
  lotNumber      String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  @@map("purchase_items")
}

model Sale {
  id           String   @id @default(cuid())
  buyerId      String
  buyer        Buyer    @relation(fields: [buyerId], references: [id], onDelete: Cascade)
  saleDate     DateTime @default(now())
  totalAmount  Float
  profit       Float? // Calculated profit for this sale
  profitMargin Float? // Profit margin percentage
  notes        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  items SaleItem[]

  @@map("sales")
}

model SaleItem {
  id         String   @id @default(cuid())
  saleId     String
  sale       Sale     @relation(fields: [saleId], references: [id], onDelete: Cascade)
  productId  String
  product    Product  @relation(fields: [productId], references: [id])
  quantity   Int
  unitPrice  Float
  totalPrice Float
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("sale_items")
}
